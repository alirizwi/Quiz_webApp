<h1>Sub Genres</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Subgenrename</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_genres.each do |sub_genre| %>
      <tr>
        <td><%= sub_genre.subgenrename %></td>
        <td><%= sub_genre.genre.genrename %></td>
        <td><%= link_to 'Show', sub_genre %></td>
        <td><%= link_to 'Edit', edit_sub_genre_path(sub_genre) %></td>
        <td><%= link_to 'Destroy', sub_genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

